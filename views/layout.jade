doctype html
html
  head
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title= title
    style.
      .aero-hide { display: none; }
      
    script.
      window.__config__ = {
        pageId: !{JSON.stringify(pageId)},
        aerobaticAppOwner: !{JSON.stringify(owner)},
        aerobaticAppRepo: !{JSON.stringify(repo)},
        airportUrl: !{JSON.stringify(aerobaticAirportUrl)}
        //- Any other application specific config settings can be specified here.
      };

    script(data-main="#{aerobaticAirportUrl}/cockpit", src="//cdnjs.cloudflare.com/ajax/libs/require.js/2.1.10/require.min.js")

    block head
  body
    .aero-hide
      h2 Barnstormer Music

      block content

